<%= form_for(habit) do |f| %>
  <% if habit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

      <ul>
      <% habit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal %><p>in days</p>
  </div>

  <div class="field">
    <%= f.label :progress %>
    <%= f.number_field :progress %><p>in days</p>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
